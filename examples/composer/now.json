{
  "version": 2,
  "name": "now-php-composer",
  "scope": "juicyfx",
  "regions": ["all"],
  "public": true,
  "functions": {
    "api/index.php": {
      "runtime": "now-php@0.0.8"
    }
  },
  "routes": [
    { "src": "/(.*)",  "dest": "/api/index.php" }
  ],
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}
